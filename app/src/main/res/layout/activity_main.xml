<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cameratest.MainActivity">

    <FrameLayout
        android:id="@+id/preview_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button_reset"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@android:drawable/ic_menu_close_clear_cancel"
            android:onClick="resetClick" />

        <Button
            android:id="@+id/button_list"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start|bottom"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:background="@android:drawable/ic_menu_add"
            android:onClick="furnitureMenuClick" />

        <Button
            android:id="@+id/button_capture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="20dp"
            android:background="@android:drawable/ic_menu_compass"
            android:onClick="captureClick" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_timebattery"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/layout_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                app:layout_constraintEnd_toStartOf="@+id/layout_battery"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/text_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|end"
                    android:autoSizeMaxTextSize="40sp"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:singleLine="true"
                    android:text="오전 00:00"
                    android:textColor="@color/white" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/layout_battery"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/imageView_battery"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"/>

                <TextView
                    android:id="@+id/textView_battery"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="4dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:autoSizeMaxTextSize="40sp"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:text="100%"
                    android:textColor="#4CAF50" />
            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/gif_plane_tutirial"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="200dp"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/gif_plane_tutirial_text"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="350dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="바닥을 감지 할 수 있도록 핸드폰을 좌우로 가볍게 움직여주세요."
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"/>

        <android.opengl.GLSurfaceView
            android:id="@+id/glsurfaceview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/select_fur_preview"
        android:layout_width="102dp"
        android:layout_height="122dp"
        android:layout_gravity="top|start"
        android:orientation="vertical"
        android:background="#77000000"
        android:visibility="invisible">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="2dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/imageView_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="true"
                android:gravity="top"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/furniture_app_icon" />

            <TextView
                android:id="@+id/textView_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginTop="100dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="TextView"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform" />

        </FrameLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/furniture_list_submenu"
            android:layout_width="270dp"
            android:layout_height="450dp"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="260dp"
            android:background="@drawable/half_corner_shape"
            android:visibility="invisible">

            <TextView
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_gravity="start|top"
                android:gravity="center_vertical|start"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="메뉴"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:textColor="@color/black"
                android:visibility="visible" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/submenu_View"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:scrollbars="vertical"
                android:overScrollMode="never"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/furniture_list_frame"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:visibility="invisible">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/furniture_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="46dp"
                android:background="#EEEEEE"
                android:scrollbars="horizontal"
                android:overScrollMode="never"/>

            <Button
                android:id="@+id/button_sub_menu"
                android:layout_width="30dp"
                android:layout_height="26dp"
                android:layout_gravity="top|end"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/submenu_button"
                android:onClick="subMenuClick" />

            <ImageView
                android:id="@+id/mode_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="top|end"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="8dp"
                android:visibility="invisible"
                android:onClick="modeIconClick"/>

            <TextView
                android:id="@+id/mode_text"
                android:layout_width="100dp"
                android:layout_height="26dp"
                android:layout_gravity="end|top"
                android:gravity="center_vertical|end"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="85dp"
                android:text="mode :"
                android:textColor="@color/black"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/furniture_text"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal|top"
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:text="가구목록"
                android:textColor="@color/black"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"/>

            <Button
                android:id="@+id/button_furlist_exit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="top|start"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:background="@android:drawable/ic_menu_more"
                android:onClick="furListExitClick" />

        </FrameLayout>

    </FrameLayout>

</RelativeLayout>