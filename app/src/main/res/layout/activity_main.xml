<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cameratest.MainActivity">

    <FrameLayout
        android:id="@+id/preview_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="130dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="top|end"
            android:textOff="off"
            android:textOn="on"
            android:text="Plane"
            android:showText="false"
            android:checked="true"/>

        <Button
            android:id="@+id/button_reset"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@android:drawable/ic_menu_close_clear_cancel"
            android:onClick="resetClick" />

        <Button
            android:id="@+id/button_list"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start|bottom"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:background="@android:drawable/ic_menu_add"
            android:onClick="furnitureMenuClick" />

        <Button
            android:id="@+id/button_capture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="20dp"
            android:background="@android:drawable/ic_menu_compass"
            android:onClick="captureClick" />

        <FrameLayout
            android:id="@+id/layout_time"
            android:layout_width="70dp"
            android:layout_height="18dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="50dp">

            <TextView
                android:id="@+id/text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="1dp"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/layout_battery"
            android:layout_width="37dp"
            android:layout_height="18dp"
            android:layout_gravity="top|end"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/textView_battery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginEnd="2dp"
                android:text="100%"
                android:textColor="#4CAF50"
                android:textSize="10dp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/imageView_battery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible" />
        </FrameLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="360dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="200dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@drawable/planetutorial" />

        <android.opengl.GLSurfaceView
            android:id="@+id/glsurfaceview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/select_fur_preview"
        android:layout_width="102dp"
        android:layout_height="122dp"
        android:layout_gravity="top|start"
        android:orientation="vertical"
        android:background="#77000000"
        android:visibility="invisible">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="2dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/imageView_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="true"
                android:gravity="top"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/furniture_app_icon" />

            <TextView
                android:id="@+id/textView_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="101dp"
                android:paddingStart="5dp"
                android:paddingEnd="4dp"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="TextView"
                android:textSize="12dp" />

        </FrameLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/furniture_list_submenu"
            android:layout_width="270dp"
            android:layout_height="450dp"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="280dp"
            android:background="#EEEEEE"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:text="메뉴"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:visibility="visible" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/submenu_View"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="45dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:scrollbars="vertical"
                android:overScrollMode="never"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/furniture_list_frame"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:visibility="invisible">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/furniture_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="46dp"
                android:background="#EEEEEE"
                android:scrollbars="horizontal"
                android:overScrollMode="never"/>

            <Button
                android:id="@+id/button_sub_menu"
                android:layout_width="30dp"
                android:layout_height="26dp"
                android:layout_gravity="top|end"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/submenu_button"
                android:onClick="subMenuClick" />

            <ImageView
                android:id="@+id/mode_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="top|end"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="8dp"
                android:visibility="invisible"
                android:onClick="modeIconClick"/>

            <TextView
                android:id="@+id/mode_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|top"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="80dp"
                android:text="mode =>"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/furniture_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="2dp"
                android:text="가구목록"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <Button
                android:id="@+id/button_furlist_exit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="top|start"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:background="@android:drawable/ic_menu_more"
                android:onClick="furListExitClick" />

        </FrameLayout>

    </FrameLayout>

</RelativeLayout>